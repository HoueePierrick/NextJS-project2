{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext", "es5", "es6", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "devDependencies": {
    "@types/node": "^18.11.9"
  },
  "type": "module",
  "include": ["styles", "public", "pages"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "moduleResolution": "node",
  "module": "commonjs",
  "types": ["node"],
  "typeRoots": ["../node_modules/@types"]
}
